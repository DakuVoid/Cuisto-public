<head>
    <title>Salles</title>
    {{!-- css --}}
    <link rel="stylesheet" type="text/css" href="../../css/TablePlan/tablePlan.css">
    {{!-- js --}}
    <script src="../../js/TablePlan/tablePlan.js"></script>
</head>

<body>
    <table id="plantable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <td colspan="3" style="overflow: hidden;">
                    <h3 style="float: left; margin-right: 10px;">Liste des salles</h3>
                </td>
            </tr>
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Nombre de tables</th>
                <th class="text-center">Clients max</th>
            </tr>
        </thead>
        <tbody>
            {{#each salles}}
            <tr id="{{id}}" class="selectable">
                <td id="name">{{nom}}</td>
                <td><b>{{tables.length}}</b> table(s)</td>
                <td><b>{{nbPlaces}}</b> client(s)</td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">
                    <div style="width: 100%;">
                        <button id="btnAjouterSalle" class="btn btn-primary">Ajouter</button>
                        <button id="btnVisionnerSalle" class="btn btn-primary selectAction" disabled>Voir les tables</button>
                        <button id="btnModifierSalle" class="btn btn-primary selectAction" disabled>Modifier</button>
                        <button id="btnDeleteSalle" class="btn btn-danger selectAction" disabled>Supprimer</button>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>


    <div class="modal fade" id="salleModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="titreDialog">Ajouter une salle</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="AjouterSalle" action="javascript:void(0)">
                        <div class="form-group">
                            <label for="nom">Nom: </label>
                            <input type="text" class="form-control" id="nom" name="nom">
                            <small class="form-text"></small>
                        </div>
                        <button type="submit" class="btn btn-primary" id="confirmer" value="Ajouter">Ajouter</button>
                        <button type="button" class="btn btn-cancel" id="annulerFormSalle" data-dismiss="modal">Annuler</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Div de Confirmation -->

    <div class="modal fade" id="modalConfirmer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer la salle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ÃŠtes-vous certain de vouloir supprimer la salle?
                </div>
                <div class="modal-footer" style="float:left;">
                    <button type="button" class="btn btn-danger" id="confirmerDelete">Supprimer</button>
                    <button type="button" class="btn btn-cancel" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>

</body>