<head>
    <title>Tables de {{salle.nom}}</title>
    {{!-- css --}}
    <link rel="stylesheet" type="text/css" href="../../css/TablePlan/tablePlan.css">
    {{!-- js --}}
    <script src="../../js/TablePlan/modifierTable.js"></script>
</head>

<body>
    <table id="tables" class="table table-bordered">
        <thead>
            <tr>
                <td colspan="2" style="overflow: hidden;">
                    <h3 id="salleCourante" salleid="{{salle.id}}" style="float: left; margin-right: 10px;">Tables ({{salle.nom}})</h3>
                </td>
            </tr>
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Nombre de places</th>
            </tr>
        </thead>
        <tbody>
            {{#each tables}}
            <tr id="{{id}}" class="selectable">
                <td id="name">{{nom}}</td>
                <td id="maxPlace" value="{{maxPlace}}"><b>{{maxPlace}}</b> Place(s)</td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <div style="width: 100%;">
                        <button id="btnAjouterTable" class="btn btn-primary">Ajouter</button>
                        <button id="btnModifierTable" class="btn btn-primary selectAction" disabled>Modifier</button>
                        <button id="btnDeleteTable" class="btn btn-danger selectAction" disabled>Supprimer</button>
                        <button id="btnRetourSalle" class="btn btn-secondary">Retour aux salles</button>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>


    <div class="modal fade" id="tableModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="titreDialog">Ajouter une table</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="formTable" action="javascript:void(0)">
                        <div class="form-group">
                            <label for="nom">Nom: </label>
                            <input type="text" class="form-control" id="nomModal" name="nom">
                            <small class="form-text"></small>
                        </div>
                        <div class="form-group">
                            <label for="nom">Nombre de places: </label>
                            <input type="text" class="form-control" id="placeModal" name="maxPlace">
                            <small class="form-text"></small>
                        </div>
                        <button type="submit" class="btn btn-primary" id="confirmer" value="Ajouter">Ajouter</button>
                        <button type="button" class="btn btn-cancel" id="retour" data-dismiss="modal">Annuler</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Div de Confirmation -->

    <div class="modal fade" id="modalConfirmer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer la table</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ÃŠtes-vous certain de vouloir supprimer cette table?
                </div>
                <div class="modal-footer" style="float:left;">
                    <button type="button" class="btn btn-danger" id="confirmerDelete">Supprimer</button>
                    <button type="button" class="btn btn-cancel" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>

</body>